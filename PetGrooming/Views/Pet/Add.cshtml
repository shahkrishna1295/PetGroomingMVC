@model  List<PetGrooming.Models.Species>
@{
    ViewBag.Title = "Add";
}

<h2>Add a New Pet</h2>
<link rel="stylesheet" href="~/Content/Site.css" />

<form method="POST" action="/Pet/Add" id="addform">
    <!-- TODO: format this nicely -->
    <div>Name:<input id="PetName" type="text" name="PetName" value="@Request["PetName"]"/></div>
    <div>
        Species:
        <select id="SpeciesID" type="text" name="SpeciesID">
            @{ 
                //A rendering loop for presenting a list of species
                //The pet should be one of these species
                foreach(var species in Model)
                {
                    <option value="@species.SpeciesID">@species.SpeciesName</option>

                }
            }
        </select>
    </div>
    <div>Weight:<input id="PetWeight" type="text" name="PetWeight"/></div>
    <div>Color:<input id="PetColor" type="text" name="PetColor" /></div>
    <div>
        Notes:
        <textarea id="PetNotes" name="PetNotes"></textarea>
    </div>
    <input type="submit" value="Add Pet">
</form>
