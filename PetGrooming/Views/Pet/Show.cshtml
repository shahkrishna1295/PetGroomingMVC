@model PetGrooming.Models.Pet

@{
    ViewBag.Title = "Show";
}

<h2>Show Pet</h2>
<link rel="stylesheet" href="~/Content/Site.css" />
<ul>
    <li><a href="/Pet/List" class="actionlink">Back To List</a></li>
    <li><a href="/Pet/Update/@Model.PetID" class="actionlink">Edit</a></li>
    <li><a href="/Pet/Delete/@Model.PetID" class="actionlink">Delete</a></li>
</ul>

<div>Name : @Model.PetName</div>
<div>Weight : @Model.Weight</div>
<div>Species : @Model.Species.SpeciesName</div>
<div>Notes : @Model.Notes</div>